create database crud_dupla_isabela_lorenzo;
use crud_dupla_isabela_lorenzo;

create table professor (
    id_professor int primary key auto_increment,
    nome_professor varchar(100),
    data_nascimento_professor date,
    cpf_professor varchar(11),
    telefone_professor varchar(11),
    email_professor varchar(50)
);

create table aula (
    id_aula int primary key auto_increment,
    nome_aula varchar(20),
    numero_sala int,
    horario_aula time
);

create table diario (
    id_diario int primary key auto_increment,
    duracao_aula time,
    fk_professor int,
    fk_aula int,
    foreign key (fk_professor) references professor(id_professor) on delete cascade, 
    foreign key (fk_aula) references aula(id_aula) on delete cascade
);